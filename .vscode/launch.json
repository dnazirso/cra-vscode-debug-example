  "version": "0.2.0",
  "compounds": [
    {
      "name": "Compound",
      "configurations": ["Launch Chrome", "Start CRA"]
    }
  ],
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Start CRA",
      "env": {
        "BROWSER": "none"
      },
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts.js",
      "args": ["start"]
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
